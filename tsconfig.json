{
    "compilerOptions": {
        "removeComments": false,
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",
        
        //Typescript compiler is just used for checking code, not compilings TS to JS.
        //ESBuild handles bundling TS into a single JS.
        "noEmit": true,
        
        "allowImportingTsExtensions": true,
        "skipLibCheck": true,
        "lib": [
            "dom",
            "ES2022"
        ],

        "strict": true
    },
    "include": [
        "website/static/js/src/*.ts"
    ],
    "exclude": [
        "node_modules",
    ]
}