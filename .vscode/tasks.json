{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",

    "tasks": [
        //compile ts to js for the app's files
        {
            "label": "Compile TS files to script.js file.",
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "group": "minify",
            }
        },

        //minify is https://github.com/tdewolff/minify/tree/master/cmd/minify
        {
            "label": "minify-js",
            "command": "minify -w -v -o website/static/js/script.min.js website/static/js/script.js",
            "type": "shell",
            "problemMatcher": [],
            "presentation": {
                "group": "minify",
            }
        },
        {
            "label": "minify-css",
            "command": "minify -w -v -o website/static/css/styles.min.css website/static/css/styles.css",
            "type": "shell",
            "problemMatcher": [],
            "presentation": {
                "group": "minify",
            }
        },
        {
            "label": "minify-all",
            "dependsOn": ["minify-js", "minify-css"],
            "problemMatcher":[],
            // "runOptions": {
            //     "runOn": "folderOpen"
            // }
        },
    ]
}